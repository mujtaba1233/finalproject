<%- include header.ejs %>
<div ng-controller="CategoryController">
    <div class="row">
        <div class="col-md-6">
            <h2>Category Management</h2>
        </div>
    </div>
    <form id="categoryform" ng-submit="save()">
        <div class="row">
            <div class="col-md-6 form-group">
                <label>Category Name</label>
                <input required type="text" ng-model="category.name" class="custom-input form-control">
            </div>
            <div class="col-md-6 form-group">
                <label>Display Order</label>
                <input required type="number" ng-model="category.displayOrder" class="custom-input form-control">
                <p class="explanation"> display order will be effacted on front store only</p>
            </div>
            <div class="col-md-12 form-group">
                <input type="checkbox" ng-checked="category.isActive == 1" ng-model="category.isActive"> Active
                <p class="explanation"> only active categories will be visible on front store</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <button type="submit" title="{{isUpdate? 'Update': 'Save'}}"
                    class="btn {{isUpdate? 'btn-primary': 'btn-success'}} pull-right">{{isUpdate? 'Update': 'Save'}}</button>
                <button style="margin-right: 5px;" ng-if="isUpdate" title="Cancel" ng-click="cancel()"
                    class="btn btn-warning pull-right">Cancel</button>
            </div>
        </div>
    </form>
    <table st-table="records" st-safe-src="categories" class="table table-striped table-hover">
        <thead>
            <tr>
                <th st-sort="name">Name</th>
                <th class="text-center" style="width: 15%" st-sort="displayOrder">Display Order</th>
                <th class="text-center" style="width: 15%" st-sort="isActive">Active</th>
                <th class="text-center" style="width: 15%">Action</th>
            </tr>
            <tr>
                <th colspan="4">
                    <input st-search="" class="custom-input form-control" placeholder="global search ..." type="text" />
                </th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="category in records">
                <td class="text-capitalize">
                    <strong>{{category.name}}</strong>
                </td>
                <td class="text-center">{{category.displayOrder}}</td>
                <td class="text-center {{category.isActive == 1? 'text-success' : 'text-danger'}}">
                    {{category.isActive == 1? "Active" : "In-Active"}}</td>
                <td class="text-center">
                    <button title="Edit Category" href="javascript:void(0)" ng-click="update(category)"
                        class="btn btn-sm btn-primary">
                        <i class="fa fa-pencil fa-2x">
                        </i>
                    </button>
                    <!-- <button title="Delete Category" href="javascript:void(0)" ng-click="delete(category)" class="btn btn-sm btn-danger">
                            <i class="fa fa-times">
                            </i>
                        </button> -->
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-center">
                    <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="7"></div>
                </td>
            </tr>
        </tfoot>
    </table>
    <!-- Modal -->
</div>


<%- include footer.ejs %>