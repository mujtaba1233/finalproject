<%- include header.ejs %>
<div ng-controller="ExcelHandlerController">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>Excel File Management</h3>
        </div>
    </div>
    <div class="row">
        <form id="userform" ng-submit="saveExcel()">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                <div ngf-multiple="true" ngf-drop ngf-select="" ng-model="excelFiles"
                    class="dropzone cursorPointer" ngf-drag-over-class="'dragover'" ngf-allow-dir="true"
                    accept="zip,application/octet-stream,application/zip,application/x-zip,application/x-zip-compressed,.csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel"
                    ngf-pattern="'zip,application/octet-stream,application/zip,application/x-zip,application/x-zip-compressed,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,.csv,application/vnd.ms-excel'">
                    <div class="msg">Drag and drop excel files here or click to upload for excel files</div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                <div ng-if="excelFiles.length">
                    <label>Enter Title</label>
                    <p class="explanation"> excel files titles</p>
                    <div class="pdf-list row">
                        <div style="margin-top: 15px;" class="col-lg-3" ng-repeat="f in excels">
                            <div class="text-center">
                                <i ng-if="f.FileExt !== 'zip'" class="fa fa-file-excel-o fa-5x"></i>
                                <i ng-if="f.FileExt === 'zip'" class="fa fa-archive fa-5x"></i>
                            </div>
                            <label>Title</label>
                            <input type="text" placeholder="Title" ng-model="f.FileName" class="form-control">
                            <div ng-click="removeExcel('local',$index)" class="topright">
                                <i class="fa fa-times-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                    <button type="submit" title="{{update? 'Update User': 'Save User'}}"
                        class="btn {{update? 'btn-primary': 'btn-success'}} pull-right">{{update? 'Update': 'Save'}}</button>
                    <button style="margin-right: 5px;" ng-if="update" title="Cancel" ng-click="cancelUpdate()"
                        class="btn btn-warning pull-right">Cancel</button>
                </div>
            </div>
        </form>
    </div>
    <table st-table="allUsers" st-safe-src="users" class="table table-striped table-hover">
        <thead>
            <tr>
                <th style="width: 30%" st-sort="FileName">Title</th>
                <th style="width: 15%" st-sort="lastname">Created By</th>
                <th style="width: 10%" st-sort="CreatedOn">Created On</th>
                <th style="width: 15%" st-sort="TableName">Type</th>
                <th style="width: 10%">Action</th>
            </tr>
            <tr>
                <th colspan="5">
                    <input st-search="" class="form-control" placeholder="global search ..." type="text" />
                </th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="f in filesArray">
                <td>{{f.FileName}}</td>
                <td class="text-capitalize">{{f.lastname}}, {{f.firstname}}</td>
                <td>{{parseDate(f.CreatedAt) | date:'MM-dd-yyyy'}}</td>
                <td>{{f.TableName}}</td>
                <td>
                    <a title="View" target="_blank" href="/excel-view/{{f.FileID}}"
                        class="btn btn-sm btn-primary">
                        <i class="fa fa-eye">
                        </i>
                    </a>
                    <button title="Remove" ng-click="removeExcel($index,f)" class="btn btn-sm btn-danger">
                        <i class="fa fa-times">
                        </i>
                    </button>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5" class="text-center">
                    <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="20"></div>
                </td>
            </tr>
        </tfoot>
    </table>
    <!-- Modal -->

</div>


<%- include footer.ejs %>