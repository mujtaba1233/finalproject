<body ng-app="loginApp" class="">
	<div class="" ng-controller="loginController">
		<div class="col-md-3 col-sm-4 col-xs-8 center-div-custom">
			<div class="form-login">
				<form ng-submit="authenticate()">
					<h4>Login</h4>
					<input required type="text" ng-model="user.email" id="userName"
						class="form-control input-sm chat-input" placeholder="Email" autocomplete="off" />
					</br>
					<input type="password" ng-model="user.password" id="userPassword"
						class="form-control input-sm chat-input" placeholder="Password" autocomplete="off" />
					</br>
					<div class="wrapper">
						<span class="group-btn">
							<button type="submit" class="btn btn-success btn-md">login <i
									class="fa fa-sign-in"></i></button>
						</span>
					</div>
					<div class="wrapper3">
						<p><a href="/forgot-password">Forgot Password?</a></p>
					</div>
				</form>
			</div>

		</div>
	</div>
	<script>
		var loginAuthUrl = '/api/user/login-auth'
	</script>



