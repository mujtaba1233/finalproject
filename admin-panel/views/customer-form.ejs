<div class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
                <div class="panel panel-default">
                    <div class="modal-header">
                        <h4 class="modal-title">{{type ==='endUser'?'New End User': 'New Customer'}}</h4>
                        <button type="button" ng-click="close(undefined)" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                </div>
                <form class="w-100" id="customerform" ng-submit="saveCustomer()">
                <div class="modal-body" style="overflow:unset">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row">
                        <div class="col-md-6 form-group" >
                            <label>First Name<span class="text-danger">*</span></label>
                            <input ng-if="type != 'endUser'" required type="text" ng-model="customer.FirstName" class="form-control">
                            <input ng-if="type == 'endUser'" required type="text" ng-model="endUser.firstName" class="form-control">
                        
                        </div>
                        <div class="col-md-6 form-group" >
                            <label>Last Name<span class="text-danger">*</span></label>

                            <input ng-if="type != 'endUser'" required type="text" ng-model="customer.LastName" class="form-control">
                            <input ng-if="type == 'endUser'" required type="text" ng-model="endUser.lastName" class="form-control">

                        </div>
                    </div>  
                    </div>
                    <div class="col-lg-12">
                        <div class="row">
                        <div class="col-md-6 form-group" >
                            <label>Email<span class="text-danger">*</span></label>
                            <input ng-if="type != 'endUser'" required type="email" ng-model="customer.EmailAddress" class="form-control">
                            <input ng-if="type == 'endUser'" required type="email" ng-model="endUser.emailAddress" class="form-control">
                        
                        </div>
                        <div class="col-md-6 form-group" >
                            <label>Company<span class="text-danger">*</span></label>
                            <input ng-if="type != 'endUser'" required type="text" ng-model="customer.CompanyName" class="form-control">
                            <input ng-if="type == 'endUser'" required type="text" ng-model="endUser.companyName" class="form-control">
                        </div>                        
                    </div>
                    </div>

                    <div ng-if="type != 'endUser'" class="col-lg-12">
                        <div class="row">
                        <div class="col-md-6 form-group" >
                            <label>Billing Address 1<span class="text-danger">*</span></label>
                            <input required type="text" ng-model="customer.BillingAddress1" class="form-control">
                        </div>
                        <div class="col-md-6 form-group" >
                            <label>Billing Address 2</label>
                            <input ng-disabled="update" ng-model="customer.BillingAddress2" class="form-control">
                        </div>
                    </div>
                </div>

                <div  ng-if="type != 'endUser'" class="col-lg-12">
                    <div class="row">
                        <div class="col-md-6 form-group" >
                            <label>City<span class="text-danger">*</span></label>
                            <input required type="text" ng-model="customer.City" class="form-control">
                        </div>
                        <div class="col-md-6 form-group" >
                            <label>Postal Code</label>
                            <input type="text" ng-model="customer.PostalCode" class="form-control">
                        </div>
                    </div>
                </div>

                <div  ng-if="type != 'endUser'" class="col-lg-12">
                    <div class="row">
                        <div class="col-md-6 form-group" >
                            <label>State</label>
                            <input type="text" ng-model="customer.State" class="form-control">
                        </div>
                        <div class="col-md-6 form-group" >
                            <label>Country<span class="text-danger">*</span></label>
                            <!-- <input required type="text" ng-model="customer.Country" class="form-control"> -->
                            <select ng-model="customer.Country" chosen ng-options="c.code as c.name  for c in countries" class="form-control">
                                <option value=""></option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-md-6 form-group" >
                            <label>Phone Number<span class="text-danger">*</span></label>
                            <input ng-if="type != 'endUser'" required type="text" onkeypress="PhoneFormat(event)" maxlength="25" ng-model="customer.PhoneNumber" class="form-control">
                            <input ng-if="type == 'endUser'" required type="text" onkeypress="PhoneFormat(event)" maxlength="25" ng-model="endUser.phoneNumber" class="form-control">
                        </div>
                        <div  ng-if="type != 'endUser'" class="col-md-6 form-group" >
                            <label>Discount (%)</label>
                            <input type="number" onkeypress="PhoneFormat(event)" step="0.01" max="100" min="0" ng-model="customer.CustomerDiscount" class="form-control">
                        </div>
                    </div>
                </div>
                        <!-- <div class="col-md-3 form-group" >
                            <input type="checkbox" ng-model="customer.active"> Active
                        </div> -->
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group" >
                            <button ng-if="type != 'endUser'"  type="submit" title="Save Customer" class="btn btn-success pull-right"> Save</button>
                            <button ng-if="type == 'endUser'" type="submit" title="Save End User" class="btn btn-success pull-right"> Save</button>
                           
                            <button type="button" style="margin-right: 5px;" title="Cancel" ng-click="close(undefined)" class="btn btn-danger pull-right"> Cancel</button>
                        </div>
                    </div>
                </form>
                <!-- Modal -->
            </div>
        </div>
    </div>
</div>
